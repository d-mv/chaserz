<h1 style="text-align: center;">New kit</h1>


<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">


<%= simple_form_for @kit, url:  user_kits_path do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
     <%= f.input :name,
        required: false,
        autofocus: true,
        label: 'NAME', label_html: { class: 'text form-label' },
        input_html: {class: 'text form-field', autocomplete: "name" }%>
         <%= f.input :description,
        required: false,
        autofocus: true,
        label: 'DESCRIPTION', label_html: { class: 'text form-label' },
        input_html: {class: 'text form-field', autocomplete: "description" }%>

         <%= f.input :photo,

        required: false,
        autofocus: true,
        label: 'PHOTO', label_html: { class: 'text form-label' },
        input_html: {class: 'text form-field', autocomplete: "photo" }%>


  </div>

  <div class="form-actions">

    <%= f.button :submit , class:'form-button text'%>
  </div>


<% end %>


 <div class="form-links">

    <%= link_to 'Back', user_path(current_user.id), class: 'text form-link' %>
</div>

      </div>
    </div>
  </div>

