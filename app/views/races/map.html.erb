<style>body { margin:0; padding:0; }
#map { position:absolute; top:0; bottom:0; width:100%; }</style>

<div id='map'></div>

<script>
mapboxgl.accessToken = 'pk.eyJ1IjoiZC1tdiIsImEiOiJjanJzenJ0aGkwanh4NDNtaXd2MXl6anVlIn0.2VkrtPiDn08qMZXGhSZfAg';
var map = new mapboxgl.Map({
container: 'map',
style: 'mapbox://styles/mapbox/streets-v9',
zoom: 0
});


let latlon = ''
let position = Object.new
const coordinates = pos => {
  latlon = pos.coords
  position = {
    "geometry": {
    "type": "Point",
    "coordinates": [latlon.longitude, latlon.latitude]
    },
    "type": "Feature",
    "properties": {}
    }
}

navigator.geolocation.getCurrentPosition(coordinates)

map.on('load', function () {
window.setInterval(function() {
map.getSource('drone').setData(position);
console.log(position)
}, 2000);

map.addSource('drone', { type: 'geojson', data: position });
map.addLayer({
"id": "drone",
"type": "symbol",
"source": "drone",
"layout": {
"icon-image": "rocket-15"
}
});
});
</script>