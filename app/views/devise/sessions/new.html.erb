<div class='desktop-wrapper'>
  <div class='desktop-message text'>
    <p>Dear Racer!</p>
    <p>This is a mobile game, please sign in on your mobile.</p>
    <p>Thank you and enjoy.</p>
  </div>
</div>
<div class='mobile-wrapper'>
<div class='mobile-container'>
  <div class='spacer-jmb'></div>
  <div class='text title'>LOG IN</div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                label: 'EMAIL', label_html: { class: 'text form-label' },
                input_html: { class: 'text form-field', autocomplete: "email" } %>
      <%= f.input :password,
                required: false, label: 'PASSWORD',  label_html: { class: 'text form-label' },
                input_html: { class: 'text form-field',autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label: 'REMEMBER ME', label_html: { class: 'text form-label' }, input_html: {class:'form-field'} if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "ENTER", class:'form-button text' %>
    </div>
  <% end %>
  <div class="form-links">
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>
