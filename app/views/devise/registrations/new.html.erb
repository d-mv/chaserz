<div class='desktop-wrapper'>
  <div class='desktop-message text'>
    <p>Dear Racer!</p>
    <p>This is a mobile game, please sign in on your mobile.</p>
    <p>Thank you and enjoy.</p>
  </div>
</div>
<div class='mobile-wrapper'>
<div class='mobile-container'>
  <div class='spacer-jmb'></div>
  <div class='text title'>SIGN UP</div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                label: 'EMAIL', label_html: { class: 'text form-label' },
                input_html: { class: 'text form-field', autocomplete: "email" } %>
      <%= f.input :password,
                required: false, label: 'PASSWORD',  label_html: { class: 'text form-label' },
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: {class: 'text form-field', autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                required: false, label: 'COMFIRM PASSWORD',  label_html: { class: 'text form-label' },
                input_html: { class: 'text form-field',autocomplete: "new-password" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "SIGN UP", class:'form-button text' %>
    </div>
  <% end %>

  <div class="form-links">
  <%= render "devise/shared/links", class: "landing-button btn-secondary text" %>
  </div>
</div>
</div>
