<div class='desktop-wrapper'>
  <%= render 'shared/desktop' %>
</div>
<div class='mobile-wrapper'>
  <div class='mobile-container'>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email, required: false, label_html: { class: 'text form-label' }, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :first_name,
      required: false,
      autofocus: true,
      label: 'FIRST NAME', label_html: { class: 'text form-label' },
      input_html: { class: 'text form-field', autocomplete: "first_name" } %>
      <%= f.input :last_name,
      required: false,
      autofocus: true,
      label: 'LAST NAME', label_html: { class: 'text form-label' },
      input_html: { class: 'text form-field', autocomplete: "last_name" } %>
      <%= f.input :nickname,
      required: false,
      autofocus: true,
      label: 'NICKNAME', label_html: { class: 'text form-label' },
      input_html: { class: '
      text form-field', autocomplete: "nickname" } %>
      <%= f.input :age,
      required: false,
      autofocus: true,
      label: 'AGE', label_html: { class: 'text form-label' },
      input_html: { class: 'text form-field', autocomplete: "age" } %>
      <%= f.input :occupation,
      required: false,
      autofocus: true,
      label: 'OCCUPATION', label_html: { class: 'text form-label' },
      input_html: { class: 'text form-field', autocomplete: "occupation" } %>
      <%= f.input :photo,
      required: false,
      autofocus: true,
      label: 'PHOTO', label_html: { class: 'text form-label' },
      input_html: { class: 'text form-field', autocomplete: "photo" } %>
      <%= f.input :password,
      hint: "leave it blank if you don't want to change it",
      required: false,
      label: 'NEW PASSWORD', label_html: { class: 'text form-label' },
      input_html: {class: 'text form-field', autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
      required: false,
      label: 'COMFIRM NEW PASSWORD', label_html: { class: 'text form-label' },
      input_html: {class: 'text form-field', autocomplete: "new-password" } %>
      <%= f.input :current_password,
      hint: "we need your current password to confirm your changes",
      required: true,
      label: 'CURRENT PASSWORD', label_html: { class: 'text form-label' },
      input_html: {class: 'text form-field', autocomplete: "current-password" } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update", class:'form-button text' %>
    </div>
    <% end %>
    <div class="form-links">
      <%= link_to "Back", user_path(current_user.id), class: 'text form-link' %>
    </div>
  </div>
</div>
